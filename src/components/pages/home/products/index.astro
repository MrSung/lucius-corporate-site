---
import { products } from '@src/contents/pages/home/products'
import PageSection from '@src/components/molecules/page-section'

import Product from './product/index.astro'
---

<PageSection
  id='products'
  title='Products'
  additionalClassList={['py-8', 'lg:py-16']}
>
  {products.map(({ title, data }) => <Product title={title} data={data} />)}
</PageSection>
