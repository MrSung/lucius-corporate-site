---
import { Image } from '@astrojs/image/components'

import Heading from '@src/components/atoms/heading'

import type { IProductProps as IProps } from './type'

const baseClassList = [
  'gap-16',
  'items-start',
  'mx-auto',
  'max-w-screen-xl',
  'lg:grid',
  'lg:grid-cols-3'
]

const { title, data } = Astro.props as IProps
---

<section class='py-8 px-4 lg:py-16 lg:px-6'>
  <Heading
    level={2}
    additionalClassList={['mb-6', 'mx-auto', 'max-w-screen-xl']}
  >
    {title}
  </Heading>
  {
    data.map(({ imgData, subName, rowData }, index) => (
      <div
        class:list={index === 0 ? baseClassList : [...baseClassList, 'mt-10']}
      >
        <div class='mb-6 lg:mb-0'>
          <Image src={imgData} />
        </div>
        <div class='col-span-2'>
          {typeof subName !== 'undefined' && (
            <Heading level={3} additionalClassList={['mb-4']}>
              {subName}
            </Heading>
          )}

          <div class='overflow-x-auto relative'>
            <table class='w-full min-w-tablet text-sm text-left text-gray-900 dark:text-white'>
              <thead class='text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400'>
                <tr>
                  <th scope='col' class='py-3 px-6'>
                    Property
                  </th>
                  <th scope='col' class='py-3 px-6'>
                    Value
                  </th>
                </tr>
              </thead>
              <tbody>
                {rowData.map(({ property, value }) => (
                  <tr class='bg-white dark:bg-gray-800 border-b dark:border-gray-700'>
                    <th
                      scope='row'
                      class='py-4 px-6 whitespace-nowrap font-medium'
                    >
                      {property}
                    </th>
                    <td class='py-4 px-6 font-medium'>{value}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    ))
  }
</section>
