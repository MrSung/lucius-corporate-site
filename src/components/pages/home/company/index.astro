---
import PageSection from '@src/components/molecules/page-section.astro'

import { companyRowData } from './data'
---

<PageSection title='Company' isWithPaddingY>
  <div class='pt-8 px-4 lg:pt-16 lg:px-6 xl:px-0 mx-auto max-w-screen-xl'>
    <div class='overflow-x-auto relative shadow-md sm:rounded-lg'>
      <table
        class='w-full min-w-tablet text-sm text-left text-gray-500 dark:text-gray-400'
      >
        <tbody>
          {
            companyRowData.map(({ property, value }) => (
              <tr class='border-b border-gray-200 dark:border-gray-700'>
                <th
                  scope='row'
                  class='py-4 px-6 font-medium text-gray-900 whitespace-nowrap bg-gray-50 dark:text-white dark:bg-gray-800'
                >
                  {property}
                </th>
                <td class='py-4 px-6'>{value}</td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>
  </div>
</PageSection>
