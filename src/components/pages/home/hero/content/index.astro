---
import ContentLeft from './content-left/index.astro'
import ContentRight from './content-right/index.astro'

interface IProps {
  mainText: string
  subText: string
}

const { mainText, subText } = Astro.props as IProps
---

<section class='bg-white dark:bg-gray-900 pt-16'>
  <div
    class='grid max-w-screen-xl px-4 py-12 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12'
  >
    <ContentLeft mainText={mainText} subText={subText} />
    <ContentRight />
  </div>
</section>
